extends ../layout

block content
  .container
    h1.page-header 집 전체 등록

    form(action = "/rooms", method='POST')
      .form-group
        label(for='email') Email address
        input.form-control(type='email', id='email', name='email', value=user.email)
      .form-group
        label(for='personner') 인원수(최대)
        input.form-control(type='personner', id='personner', name='personner', value=30)
        label(for='roomsort') 방종류
        input.form-control(type='text', id='roomsort', name='roomsort', value = "집 전체") 
        label(for='rate') 비용(1박)
        input.form-control(type='text', id='rate', name='rate', placeholder='rate')        
      .form-group
        label(for='title') 방이름
        input.form-control(type='text', id='title', name='title', placeholder='title')
      .form-group
        label(for='address') 주소
        input(type="text", id="postcode", name='postcode', placeholder="우편번호")
        input(type="button", onclick="execDaumPostcode()", value="우편번호 찾기")
        br
        input.form-control(type="text", id="address", name='address', placeholder="주소")
        input.form-control(type="text", id="address2", name='address2', placeholder="상세주소")
      .form-group      
        label(for='content') 내용(편의시설)
        textarea.form-control(id='content', rows='5', name='content', placeholder='content here')
      .form-group      
        label(for='content2') 이용규칙
        textarea.form-control(id='content2', rows='5', name='content2', placeholder='content here')
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 완료


  script(type='text/javascript', src='/javascripts/address.js') 