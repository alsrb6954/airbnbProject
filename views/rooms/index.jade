extends ../layout

block content
  .container
    h1.page-header Room List

    //- | total #{pagination.numPosts} posts
    table.table.table-bordered
      thead
        tr
          th 도시
          th 방이름
          th 숙소 인원(최대)
          th 가격(1박)
          th 예약상태
          th 등록시간
          th 조회수
          th 
      tbody
        each room in rooms
          tr
            td= room.city
            td
              a(href='/rooms/#{room.id}')= room.title
            td= room.personner
            td= room.rate
            td 
              span= room.reservation
            td= moment(room.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td= room.read
            td
              if (currentUser)
                if (currentUser.email == room.email)
                  a.btn.btn-xs.btn-default(href='/rooms/#{room.id}/edit') 수정
                  | 
                  a.btn.btn-xs.btn-default(data-id=room.id, class='delete') 삭제
                else
    if (currentUser)
      a.btn.btn-primary(href='/rooms/#{currentUser.id}/new') 숙소 등록하기
    else

